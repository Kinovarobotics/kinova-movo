 <launch>
 	<arg name="sim" default="false"/>
 	
	<!-- Start Perception -->
    <node name="basic_grasping_perception" pkg="simple_grasping" type="basic_grasping_perception" output="screen">
    	<remap from="/head_camera/depth_registered/points" to="/kinect2/sd/points"/>
    	<param name="simulated_kinova" value="true" if="$(arg sim)"/>
    	<param name="use_debug" value="true"/>
        <rosparam command="load" file="$(find movo_demos)/config/simple_grasping.yaml" />
        <rosparam command="load" file="$(find movo_moveit_config)/config/kinematics.yaml" />
    </node>

    <!-- Drive to the table, pick stuff up -->
    <node name="demo" pkg="movo_demos" type="demo.py" output="screen" >
    	<rosparam command="load" file="$(find movo_demos)/config/demo_params_sim.yaml" if="$(arg sim)" />
    	<rosparam command="load" file="$(find movo_demos)/config/demo_params.yaml" unless="$(arg sim)" />
    	<rosparam command="load" file="$(find movo_moveit_config)/config/kinematics.yaml" />
    	<param name="sim" value="$(arg sim)"/>
    </node>

</launch>