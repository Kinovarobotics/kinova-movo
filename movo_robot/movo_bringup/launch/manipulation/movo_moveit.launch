<?xml version="1.0"?>
<!-- Launch file for jaco platform startup by default we don't use the experimental JTAS, this is just for teleop--> 
<launch>

    <arg name="local" default="true"/>

    <machine name="movo1" address="movo1" user="movo" env-loader="/home/movo/env.sh" default="true" unless="$(arg local)"/>
    
    <!-- Moveit bringup-->
	<group unless="$(optenv MOVO_HAS_NO_RIGHT_ARM false)">
		<include if="$(optenv MOVO_HAS_RIGHT_ARM_7DOF false)" file="$(find movo_7dof_moveit_config)/launch/movo_moveit_planning_execution.launch"/>
		<include if="$(optenv MOVO_HAS_RIGHT_ARM_6DOF false)" file="$(find movo_moveit_config)/launch/movo_moveit_planning_execution.launch"/>
	</group>
	<group if="$(optenv MOVO_HAS_NO_RIGHT_ARM false)">
		<include if="$(optenv MOVO_HAS_LEFT_ARM_7DOF false)" file="$(find movo_7dof_moveit_config)/launch/movo_moveit_planning_execution.launch"/>
		<include if="$(optenv MOVO_HAS_LEFT_ARM_6DOF false)" file="$(find movo_moveit_config)/launch/movo_moveit_planning_execution.launch"/>
	</group>
    
	<node pkg="movo_bringup" type="init_robot" name="init_robot" respawn="false" output="screen">
		<param if="$(optenv MOVO_HAS_RIGHT_ARM_6DOF false)" name="jaco_dof_right_arm" value="6dof" />
		<param if="$(optenv MOVO_HAS_RIGHT_ARM_7DOF false)" name="jaco_dof_right_arm" value="7dof" />
		<param if="$(optenv MOVO_HAS_NO_RIGHT_ARM false)" name="jaco_dof_right_arm" value="none" />
		<param if="$(optenv MOVO_HAS_LEFT_ARM_6DOF false)" name="jaco_dof_left_arm" value="6dof" />
		<param if="$(optenv MOVO_HAS_LEFT_ARM_7DOF false)" name="jaco_dof_left_arm" value="7dof" />
		<param if="$(optenv MOVO_HAS_NO_LEFT_ARM false)" name="jaco_dof_left_arm" value="none" />
		<param name="gripper_right" value="rq85" if="$(optenv MOVO_HAS_RIGHT_ROBOTIQ_GRIPPER false)"/>
		<param name="gripper_left" value="rq85" if="$(optenv MOVO_HAS_LEFT_ROBOTIQ_GRIPPER false)"/>
		<rosparam if="$(optenv MOVO_HAS_TWO_7DOF_ARMS false)" command="load" file="$(find movo_7dof_moveit_config)/config/kinematics.yaml" />
		<rosparam if="$(optenv MOVO_HAS_TWO_6DOF_ARMS false)" command="load" file="$(find movo_moveit_config)/config/kinematics.yaml" />
                <rosparam if="$(optenv MOVO_HAS_RIGHT_ARM_7DOF false)" command="load" file="$(find movo_7dof_moveit_config)/config/kinematics_right_only.yaml" />
	</node>

</launch>
