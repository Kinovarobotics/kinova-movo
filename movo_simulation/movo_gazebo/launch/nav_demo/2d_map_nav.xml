<!-- 2D Map navigation Demo -->

<launch>
    <arg name="map_file" default="$(find movo_gazebo_demo)/maps/test_zone.yaml"/>
    <arg name="use_teb" default="true"/>

    <!-- Run the map server -->
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

    <!-- Run movo_move_base action client for tracking status -->
    <node pkg="movo_ros" name="movo_move_base" type="movo_move_base" output="screen" clear_params="true"> 
        <param name="using_amcl" value="true"/>
        <param name="global_frame" value="/map"/>
        <param name="goal_timeout_sec" value="300"/>
        <param name="load_waypoints" value="false"/>
        <param name="sim" value="true"/>
    </node>
       
    <!--- Run amcl -->
    <node pkg="amcl" type="amcl" name="amcl" output="screen" clear_params="true">
        <rosparam command="load" file="$(find movo_navigation_apps)/config/common/amcl.yaml"/>
        <remap from="scan" to="/movo/base_scan_filtered" />
    </node>

    <!--- Run Move Base -->
    <include file="$(find movo_navigation_apps)/launch/move_base.launch" unless="$(arg use_teb)">
        <arg name="no_static_map" value="false"/>
    </include>

    <include file="$(find movo_navigation_apps)/launch/move_base_teb.launch" if="$(arg use_teb)">
        <arg name="no_static_map" value="false"/>
    </include>

</launch>
