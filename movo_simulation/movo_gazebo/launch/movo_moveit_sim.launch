<?xml version="1.0"?>
<launch>

	<param name="use_sim_time" value="true" />

    <!-- ROS Driver, Robot State Publisher, and sensors -->
    <node pkg="si_utils" type="timed_roslaunch"
        args="1 movo_gazebo movo.launch"
        name="movo_gazebo_bringup" output="screen"/>
        
    <!-- MoveIt! configuration -->
    <node pkg="si_utils" type="timed_roslaunch"
        args="20 movo_moveit_config movo_moveit_planning_execution.launch sim:=true"
        name="movo_moveit_bringup" output="screen"/>
        
    <!-- Kinematics test -->
    <node pkg="si_utils" type="timed_roslaunch"
        args="28 movo_viz view_robot.launch"
        name="movo_viz_bringup" output="screen"/>

    <!-- Kinematics test -->
    <node pkg="si_utils" type="timed_roslaunch"
        args="35 movo_gazebo test_movo_kinematics.launch"
        name="movo_kintest_bringup" output="screen"/>
        
        

</launch>
